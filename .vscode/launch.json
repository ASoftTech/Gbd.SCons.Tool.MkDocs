    "version": "0.2.0",
    "configurations": [
    
        {
            "name": "Python: Current File",
            "type": "python",
            "request": "launch",
            "cwd": "${fileDirname}",
            "program": "${file}",
            "args": ["build"],
        },

        {
            "name": "Python 3: Run scons SConstruct file",
            "type": "python",
            "request": "launch",
            "cwd": "${fileDirname}",
            // we launch scons as a wrapper to launch the SConstruct file
            "program": "${workspaceFolder}/build/py36dev/Scripts/scons.py",
            "env": {
                // tell scons which set of engine / libs to use
                "SCONS_LIB_DIR": "${workspaceFolder}/build/py36dev/Lib/site-packages/scons-3.1.0.alpha.yyyymmdd",
                // for development add in the root and scons engine directories
                "PYTHONPATH" : "${workspaceFolder};${workspaceFolder}/build/py36dev/Lib/site-packages/scons-3.1.0.alpha.yyyymmdd",
                // make sure we use mkdocs from the virtual environment
                "PATH" : "${workspaceFolder}/build/py36dev/Scripts"
            },
            "args": ["build"],
        },
        
    ]
}